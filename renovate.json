{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>elastic/renovate-config"
  ],
  "ignorePaths": [
    "tests/reports/**"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "actions/cache",
        "actions/checkout",
        "actions/download-artifact",
        "actions/setup-go",
        "actions/setup-python",
        "actions/upload-artifact",
        "docker.elastic.co/appex-qa/qaf",
        "faker",
        "github.com/spf13/cobra",
        "golang.org/x/mod",
        "pypa/gh-action-pypi-publish"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "tests/config.yaml"
      ],
      "matchStrings": [
        "# renovate: datasource=epr package=(?<packageName>security_detection_engine-\\S+)\\s*\\n(?<kibanaVersion>.+): \"(?<currentValue>\\S+)\""
      ],
      "autoReplaceStringTemplate": "# renovate: datasource=epr package=security_detection_engine-{{{kibanaVersion}}}:\n{{{kibanaVersion}}}: \"{{{newValue}}}\"",
      "datasourceTemplate": "custom.security_detection_engine"
    }
  ],
  "customDatasources": {
    "security_detection_engine": {
      "defaultRegistryUrlTemplate": "https://epr.elastic.co/search?package={{{replace '-' '&kibana.version=' packageName}}}",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $.version}]}"
      ]
    }
  }
}
